package net.mrzenek.cobble.komendy;

import net.mrzenek.cobble.Cobble;

import org.bukkit.ChatColor;
import org.bukkit.entity.Player;

public class Off implements SubCommands {

	@Override
	public boolean onCommand(Player player, String[] args) {
		if(player.hasPermission(permission())){
			Cobble.offc.add(player);
			player.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.DARK_GREEN + "Wylaczyles wypadanie cobble");
			return true;
		}else{
			player.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.DARK_RED + "Nie posiadasz Permission do tej komendy!");
			return true;
		}
	}

	@Override
	public String help(Player p) {
		return "/cobble off - wylacza drop cobblestone";
	}

	@Override
	public String permission() {
		return "cobble.off";
	}

}
