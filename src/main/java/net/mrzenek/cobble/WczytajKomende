package net.mrzenek.cobble;

import java.util.Arrays;
import java.util.HashMap;
import java.util.Vector;

import net.mrzenek.cobble.komendy.Global;
import net.mrzenek.cobble.komendy.Off;
import net.mrzenek.cobble.komendy.On;
import net.mrzenek.cobble.komendy.SubCommands;
import net.mrzenek.cobble.komendy.Test;

import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.plugin.Plugin;
import org.bukkit.plugin.PluginDescriptionFile;

public class WczytajKomende implements CommandExecutor {
	
	private Plugin plugin;
	private HashMap <String, SubCommands> komendy;
	private HashMap <String, Integer> helpinfo;
	
	public WczytajKomende(Cobble plugin) {
		this.plugin = plugin;
		komendy = new HashMap<String, SubCommands>();
		helpinfo = new HashMap<String, Integer>();
		loadCommands();
		loadHelpInfo();
	}
	
	private void loadCommands(){
		komendy.put("on", new On());
		komendy.put("off", new Off());
		komendy.put("global", new Global());
		komendy.put("test", new Test());
	}
	
	private void loadHelpInfo(){
		helpinfo.put("on", 1);
		helpinfo.put("off", 1);
		helpinfo.put("global", 2);
	}
	
	public boolean onCommand(CommandSender sender, Command cmd1, String label, String[] args) {
		PluginDescriptionFile opis = plugin.getDescription();
		if(!(sender instanceof Player)){
			sender.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.DARK_RED + "Ta komenda jest tylko dla graczy");
			return true;
		}
		Player player = (Player) sender;
		
		if(cmd1.getName().equalsIgnoreCase("cobble")){
			if(args == null || args.length < 1){
				player.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.GREEN + "Wersja " + opis.getVersion() + " by WarrockHack dla MpcForum(MrZenek)");
				player.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.GREEN + "Komendy: /cobble pomoc <gracz | admin> by wyswietlic pomoc");
				return true;
			}
			if(args[0].equalsIgnoreCase("pomoc")){
				if(args.length == 1){
					pomoc(player, 1);
				}else{
					if(args[1].toLowerCase().startsWith("gracz")){
						pomoc(player, 1);
						return true;
					}
					if(args[1].toLowerCase().startsWith("admin")){
						if(player.hasPermission("cobble.admin")){
						pomoc(player, 2);
						return true;
						}else{
							player.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.DARK_RED + "Nie posiadasz Permission do tej komendy!");
							return true;
						}
					}else{
						player.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.DARK_RED + "Ta strone nie istnieje");
						return true;
					}
				}
				return true;
			}
			String sub = args[0];
			Vector <String> l = new Vector<String>();
			l.addAll(Arrays.asList(args));
			l.remove(0);
			args = (String[]) l .toArray(new String[0]);
			if(!komendy.containsKey(sub)){
				player.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.DARK_RED + "Ta komenda nie istnieje");
				player.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.DARK_GREEN + "Wpisz /cobble help po wiecej informacji");
				return true;
			}
			try{
				komendy.get(sub).onCommand(player, args);
				return true;
			}catch(Exception e){
				e.printStackTrace();
				player.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.DARK_RED + "Blad komendy: " + sub + " !" + Arrays.toString(args));
				player.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.DARK_GREEN + "Wpisz /cobble help po wiecej informacji");
				return true;
			}
		}
		return false;
	}
	
	public void pomoc(Player p, int page){
		if(page == 1){
			p.sendMessage(ChatColor.BLUE + "------------ " + "[Cobble]" + ChatColor.DARK_AQUA + " Komendy gracza" + ChatColor.BLUE + " ------------");
		}
		if(page == 2){
			p.sendMessage(ChatColor.BLUE + "------------ " + "[Cobble]" + ChatColor.DARK_AQUA + " Komendy Admina" + ChatColor.BLUE + " ------------");
		}
		//if(page == 3){
			//p.sendMessage(ChatColor.BLUE + "------------ " + "[Cobble]" + ChatColor.DARK_AQUA + " Komendy Vipa" + ChatColor.BLUE + " ------------");
		//}
		
		for(String komenda : komendy.keySet()){
			try{
				if(helpinfo.get(komenda) == page){
					p.sendMessage(ChatColor.BLUE + "[Cobble]" + ChatColor.GREEN + komendy.get(komenda).help(p));
				}
			}catch(Exception e){}
		}
	}

}
